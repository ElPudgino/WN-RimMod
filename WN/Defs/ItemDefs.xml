<Defs>
  <ThingDef ParentName="BaseGun">
    <defName>ParadiseLostWeapon</defName>
    <label>Paradise Lost</label>
    <description>Behold: you stood at the door and knocked, and it was opened to you. I come from the end, and I am here to stay for but a moment. At the same time, I am the one who kindled the light to face the world. My loved ones, who now eagerly desire the greater gifts; I will show you the most excellent way.</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>false</destroyOnDrop>
    <relicChance>0</relicChance>
    <useHitPoints>false</useHitPoints>
    <smeltable>false</smeltable> 
    <graphicData>
      <texPath>Items/paradiselostweapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.4,2.4)</drawSize>
    </graphicData>
    <statBases>
      <DeteriorationRate>0</DeteriorationRate>
      <Flammability>0</Flammability>
      <WorkToMake>40000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>6.0</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>WN.Verb_ParadiseLostMain</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>2.5</warmupTime>
        <range>29.9</range>
        <minRange>2.9</minRange>   
	<targetParams>
          <canTargetLocations>true</canTargetLocations>
          <canTargetPawns>true</canTargetPawns>
        </targetParams>
        <burstShotCount>1</burstShotCount>
        <showBurstShotStats>false</showBurstShotStats>   
      </li>
    </verbs>  
    <tools>
      <li>
        <label>Tip</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
